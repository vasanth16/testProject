# Database URL (SQLite for local, can use PostgreSQL in production)
DATABASE_URL=sqlite+aiosqlite:///./news.db

# Comma-separated list of allowed CORS origins
CORS_ORIGINS=http://localhost:5173,https://your-frontend-domain.com

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable debug mode
DEBUG=false

# News fetch interval in hours
FETCH_INTERVAL_HOURS=6

# Gemini API key for article rating
GEMINI_API_KEY=your_api_key_here

# Minimum rating score to display articles (0-100)
RATING_THRESHOLD=65
